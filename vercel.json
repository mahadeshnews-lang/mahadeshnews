{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"  // <--- यहाँ सिर्फ़ बिल्डर का नाम रखें
    },
    {
      "src": "backend/server.py",
      "use": "@vercel/python"  // <--- यहाँ सिर्फ़ बिल्डर का नाम रखें
    },
    {
      "src": "src/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.py"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}
