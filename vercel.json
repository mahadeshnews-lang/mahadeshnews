{
  "version": 2,
  "builds": [
    // 1. FRONTEND BUILD (React/Node.js)
    {
      "src": "src/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    // 2. STATIC ASSETS (public folder)
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    // 3. PYTHON BACKEND BUILD
    {
      "src": "backend/server.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.py"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}
